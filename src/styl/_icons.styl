size(width = 30, height = 30)
    width width px
    height height px

.icons-home
    text-align center
    a
        display inline-block
        padding rem(12px)
        margin rem(4px)
        border-radius 50%
        border rem(2px) solid sec 
        line-height 0
        transition all .7s
        .icon
            fill sec
            size(15,15)
            +above(cut)
                size()
        &:hover
            background texts 
            .icon
                fill main

.down
    position absolute
    bottom 50px
    width 100%
    display block
    text-align center
    .icon
        align(both)
        size(100,100)
        fill sec
        animation pulse 1.3s infinite
.icon-arrow-menu
    vertical-align bottom
    size(18,15)

#heart
    color #E41515
